<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="#D8F3F6"
    tools:context=".view.activities.ProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/mainPageToolbar"
            layout="@layout/app_bar_layout"
            >
        </include>
    </com.google.android.material.appbar.AppBarLayout>

<!--    User info layout-->
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/appBarLayout"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_image"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />
    </LinearLayout>

<!--    audio, video and search buttons-->
    <LinearLayout
        android:id="@+id/interaction_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/audio_call"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="audio"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:drawableTop="@drawable/baseline_call_24"
            android:drawableTint="@color/color_blue"
            android:textColor="@color/color_blue"
            android:layout_marginEnd="20dp"
            />

        <Button
            android:id="@+id/video_call"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="video"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:drawableTop="@drawable/baseline_videocam_24"
            android:drawableTint="@color/color_blue"
            android:textColor="@color/color_blue"
            android:layout_marginEnd="20dp"
            />

        <Button
            android:id="@+id/search"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="search"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:drawableTop="@drawable/search"
            android:drawableTint="@color/color_blue"
            android:textColor="@color/color_blue"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/status_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_below="@id/interaction_buttons"
        android:background="@drawable/buttons"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/black"
            />

    </RelativeLayout>

    <!--    expanded image view-->
    <include
        android:id="@+id/expanded_image"
        layout="@layout/layout_expanded_image_view"/>
</RelativeLayout>